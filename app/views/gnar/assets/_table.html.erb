<%= turbo_frame_tag "gnar-assets" do %>
  <table id="assets">
    <thead>
      <th scope="col">
        Type
      </th>
      <th scope="col">
        Gnarnian
      </th>
      <th scope="col">
        Model Number
      </th>
      <th scope="col">
        Serial Number
      </th>
      <th scope="col">
        Date of Purchase (approx)
      </th>
      <th scope="col">
        Edit
      </th>
      <th scope="col">
        Retire
      </th>
    </thead>
    <tbody>
      <% assets.each do |asset|%>
        <%= render AssetRowComponent.new(asset, @user) %>
      <% end %>
    </tbody>
  </table>
  <h2> Retired Assets</h2>
  <table id="retired-assets">
    <thead>
      <th scope="col">
        Type
      </th>
      <th scope="col">
        Gnarnian
      </th>
      <th scope="col">
        Model Number
      </th>
      <th scope="col">
        Serial Number
      </th>
      <th scope="col">
        Date of Purchase (approx)
      </th>
      <th scope="col">
        Edit
      </th>
      <th scope="col">
        UnRetire
      </th>
    </thead>
    <tbody>
      <%= render retired_assets %>
    </tbody>
  </table>
<% end %>
