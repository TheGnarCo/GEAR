<tr class="asset">
  <td>
    <%= asset.asset_type %>
  </td>
  <td>
    <%= link_to asset.user.email, gnar_user_path(asset.user), data: { turbo: false } %>
  </td>
  <td>
    <%= asset.model_number %>
  </td>
  <td>
    <%= asset.serial_number %>
  </td>
  <td>
    <%= asset.approximate_purchase_date %>
  </td>
  <td>
    <%= link_to "Edit", edit_gnar_asset_path(asset, active_user_id: @user), data: {"turbo_frame": "asset_form_frame"}, class: "button standard" %>
  </td>
  <td>
    <%= form_for asset, html: {class: "hidden"} do |f| %>
      <%= f.hidden_field :retired, value: !asset.retired? %>
      <%= f.hidden_field :active_user_id, value: @user&.id %>
      <%= f.submit asset.retired? ? "UnRetire" : "Retire", class: 'button standard' %>
    <% end %>
  </td>
</tr>
